<div class='container'>
  <h3>Change Password</h3>

  <form action='/user/update-password' method='post'>
    <input type='password' name='old_password' placeholder='Old Password' value='<%= @old_password %>'>
    <input type='password' name='new_password' placeholder='New Password'>
    <button type='submit'>Change Password</button>
  </form>
</div>

<div class='container danger'>
  <h3>Delete Account</h3>

  <span class='alert'><b>âš  Warning! This action cannot be undone.</b></span>

  <form id='password-confirm' style='display: none' action='/user/delete' method='post' >
      <p>Confirm delete? Please enter your password to continue.</p>

      <input type='password' name='password' placeholder='Enter password to continue' value='<%= @password %>'>
      <button type='submit'>DELETE ACCOUNT</button>
  </form>
  <br />
  <button id='delete'>DELETE ACCOUNT</button>
</div>

<script type='text/javascript'>
  $(document).ready(function() {
    $('#delete').on('click', function() {
      $('#password-confirm').show();
      $(this).hide();
    });
  });
</script>