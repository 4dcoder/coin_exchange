<div class='chart'>

  <h4>Bitcoin Price 30-day chart</h4>
  <%== area_chart(
    @historical_bpi['bpi'], 
    min: @min_price*0.95, 
    max: @max_price*1.1, 
    colors: ['#ffcc00'], 
    label: 'BTC Price',
    library: {chartArea: {height: '80%', width: '85%'}, backgroundColor: 'transparent' } 
  ) %>
  <nav class='credit'>Powered by <a href='https://www.coindesk.com/price/'>CoinDesk</a></nav>

  <br />
  <span>Bitcoin Price: $<%= @current_btc_price %></span>
  <p>Updated: <%= Time.now %></p>
</div>

